<ContentPage
    x:Class="LocalDisasterPreventionInformationApp.Pages.Stock.ProductRegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:LocalDisasterPreventionInformationApp.Pages.Base"
    Shell.NavBarIsVisible="False">

    <base:BasePage>
        <base:BasePage.InnerContent>

            <VerticalStackLayout Padding="20"
                                 Spacing="15"
                                 HorizontalOptions="Center">

                <Grid ColumnDefinitions="120,Auto"
                      RowDefinitions="Auto,Auto,Auto,Auto,AUto,Auto,Auto"
                      ColumnSpacing="0"
                      RowSpacing="20"
                      HorizontalOptions="Center">

                    <!-- 商品名 -->
                    <Label Text="商品名：" 
                       Grid.Row="0" Grid.Column="0"
                       VerticalOptions="Center" 
                       HorizontalTextAlignment="End"/>

                    <Entry x:Name="ProductNameEntry"
                       Grid.Row="0" Grid.Column="1"
                       Placeholder="商品名を入力"
                       WidthRequest="200"/>

                    <!-- 消費期限 -->
                    <Label Text="消費期限：" 
                       Grid.Row="1" Grid.Column="0"
                       VerticalOptions="Center" 
                       HorizontalTextAlignment="End"/>

                    <Entry x:Name="ExpirationEntry"
                       Grid.Row="1" Grid.Column="1"
                       Placeholder="消費期限を入力"
                       WidthRequest="200"/>

                    <!-- 数量 -->
                    <Label Text="数量：" 
                       Grid.Row="2" Grid.Column="0"
                       VerticalOptions="Center" 
                       HorizontalTextAlignment="End"/>

                    <Entry x:Name="QuantityEntry"
                       Grid.Row="2" Grid.Column="1"
                       Placeholder="数量を入力"
                       WidthRequest="200"/>

                    <!-- カテゴリ -->
                    <Label Text="カテゴリ：" 
                       Grid.Row="3" Grid.Column="0"
                       VerticalOptions="Center" 
                       HorizontalTextAlignment="End"/>

                    <Picker x:Name="CategoryPicker"
                       Grid.Row="3" Grid.Column="1"
                       WidthRequest="200">
                        <Picker.Items>
                            <x:String>食品</x:String>
                            <x:String>飲料</x:String>
                            <x:String>日用品</x:String>
                            <x:String>医薬品</x:String>
                            <x:String>その他</x:String>
                        </Picker.Items>
                    </Picker>
                </Grid>

                <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                    <!-- 戻るボタン -->
                    <Button Text="戻る"
                        BackgroundColor="#CCCCCC"
                        TextColor="Black"
                        HorizontalOptions="Center"
                        WidthRequest="120"
                        Clicked="OnBackClicked"/>

                    <!-- 登録ボタン -->
                    <Button Text="登録"
                        HorizontalOptions="Center"
                        WidthRequest="120"
                        Clicked="OnSubmitClicked"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </base:BasePage.InnerContent>
    </base:BasePage>
</ContentPage>