<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="LocalDisasterPreventionInformationApp.Pages.Base.BasePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="BaseRoot">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- 共通ヘッダー -->
        <Grid x:Name="HeaderArea" Grid.Row="0" BackgroundColor="#F5F5F5" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- タイトル + 右上アイコン -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">

                <!-- ★ 固定文字 → 翻訳対応 -->
                <Label Text="{Binding Header_AppTitle}"
                       FontSize="32"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />

                <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">
                    <Border Stroke="#CCCCCC"
                            StrokeThickness="1"
                            Background="Transparent"
                            StrokeShape="RoundRectangle 25"
                            WidthRequest="140"
                            HeightRequest="35"
                            VerticalOptions="Center">

                        <Grid>

                            <!-- アイコン -->
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <Image Source="language.png"
                                       WidthRequest="28"
                                       HeightRequest="35"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>

                            <!-- 言語選択 -->
                            <Picker ItemsSource="{Binding LanguageList}"
                                    SelectedItem="{Binding SelectedLanguage}"
                                    BackgroundColor="#00FFFFFF"
                                    TextColor="Black"
                                    WidthRequest="140"
                                    HeightRequest="35"
                                    ZIndex="100"/>
                        </Grid>
                    </Border>

                    <ImageButton Source="my.png"
                                 BackgroundColor="Transparent"
                                 WidthRequest="60" HeightRequest="60"
                                 Command="{Binding MyPageCommand}" />
                </HorizontalStackLayout>
            </Grid>

            <!-- ハンバーガー + ページ名 + ルート検索 -->
            <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto,Auto" Margin="0,10,0,0">

                <!-- ハンバーガー -->
                <ImageButton Source="hamburger.png"
                             BackgroundColor="Transparent"
                             WidthRequest="80" HeightRequest="80"
                             Command="{Binding OpenMenuCommand}" />

                <!-- ページ名（これは各ページの ViewModel が設定する） -->
                <Label Grid.Column="1"
                       Text="{Binding PageTitle}"
                       FontSize="20"
                       VerticalOptions="Center"
                       Margin="10,0,0,0" />

                <!-- 移動手段 Picker -->
                <Picker Grid.Column="2"
                        WidthRequest="150"
                        HeightRequest="40"
                        VerticalOptions="Center"
                        ItemsSource="{Binding RouteModes}"
                        SelectedItem="{Binding SelectedRouteMode}" />

                <!-- ★ 固定文字 → 翻訳対応 -->
                <Button Grid.Column="3"
                        Text="{Binding Header_RouteSearch}"
                        WidthRequest="150"
                        HeightRequest="40"
                        VerticalOptions="Center"
                        Margin="10,0,0,0"
                        Command="{Binding RouteSearchCommand}" />
            </Grid>
        </Grid>

        <!-- ページごとの中身 -->
        <ContentView x:Name="ContentArea"
             Grid.Row="1"
             Content="{Binding Source={x:Reference BaseRoot}, Path=InnerContent}" />

        <!-- 共通フッター -->
        <Grid x:Name="FooterArea" Grid.Row="2" BackgroundColor="#F5F5F5" HeightRequest="80">
            <Label Text="{Binding NewsText}"
                   FontSize="16"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </Grid>

    </Grid>
</ContentView>