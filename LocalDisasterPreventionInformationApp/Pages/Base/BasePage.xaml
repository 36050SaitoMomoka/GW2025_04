<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="LocalDisasterPreventionInformationApp.Pages.Base.BasePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="BaseRoot">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- 共通ヘッダー -->
        <Grid Grid.Row="0" BackgroundColor="#F5F5F5" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- タイトル + 右上アイコン -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                <Label Text="地域防災情報アプリ"
                       FontSize="32"
                       FontAttributes="Bold"
                       VerticalOptions="Center" />

                <HorizontalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Center">
                    <ImageButton Source="chat.png"
                                 BackgroundColor="Transparent"
                                 WidthRequest="60" HeightRequest="60"
                                 Command="{Binding FriendsCommand}" />
                    <ImageButton Source="notification.png"
                                 BackgroundColor="Transparent"
                                 WidthRequest="60" HeightRequest="60"
                                 Command="{Binding NotificationCommand}" />
                    <ImageButton Source="setting.png"
                                 BackgroundColor="Transparent"
                                 WidthRequest="60" HeightRequest="60"
                                 Command="{Binding SettingCommand}" />
                </HorizontalStackLayout>
            </Grid>

            <!-- ハンバーガー + ページ名 + ルート検索 -->
            <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" Margin="0,10,0,0">

                <!-- ハンバーガー -->
                <ImageButton Source="hamburger.png"
                             BackgroundColor="Transparent"
                             WidthRequest="80" HeightRequest="80"
                             Command="{Binding OpenMenuCommand}" />

                <!-- ページ名 -->
                <Label Grid.Column="1"
                       Text="{Binding PageTitle}"
                       FontSize="20"
                       VerticalOptions="Center"
                       Margin="10,0,0,0" />

                <!-- ルート検索ボタン -->
                <Button Grid.Column="2"
                        Text="ルート検索"
                        WidthRequest="150"
                        HeightRequest="40"
                        VerticalOptions="Center"
                        Margin="10,0,0,0"
                        Command="{Binding RouteSearchCommand}" />
            </Grid>
        </Grid>

        <!-- ページごとの中身 -->
        <ContentPresenter x:Name="ContentArea"
                          Grid.Row="1" 
                          Content="{Binding Source={x:Reference BaseRoot}, Path=InnerContent}" />

        <!-- 共通フッター -->
        <Grid Grid.Row="2" BackgroundColor="#F5F5F5" HeightRequest="80">
            <Label Text="{Binding NewsText}"
                   FontSize="16"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </Grid>

    </Grid>
</ContentView>