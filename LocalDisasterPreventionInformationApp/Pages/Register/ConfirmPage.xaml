<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalDisasterPreventionInformationApp.Pages.Register.ConfirmPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- 上部バー -->
        <Grid Grid.Row="0" HeightRequest="200" BackgroundColor="#F5F5F5">
            <Label Text="以下の内容でよろしいですか？"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </Grid>

        <!-- 中央内容 -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">

                <Grid ColumnDefinitions="Auto,*"
                      RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                      ColumnSpacing="30"
                      RowSpacing="15">

                    <!-- 氏名 -->
                    <Label Text="氏名"
                           FontAttributes="Bold"
                           FontSize="22"
                          HorizontalTextAlignment="Center"
                           Grid.Row="0" Grid.Column="0"/>

                    <Label x:Name="nameLabel"
                           FontSize="22"
                           HorizontalTextAlignment="Start"
                           Margin="0,5,0,0"
                           Grid.Row="0" Grid.Column="1"/>

                    <!-- フリガナ -->
                    <Label Text="フリガナ"
                           FontAttributes="Bold"
                           FontSize="22"
                           HorizontalTextAlignment="Center"
                           Grid.Row="1" Grid.Column="0"/>

                    <Label x:Name="furiganaLabel"
                           FontSize="22"
                           HorizontalTextAlignment="Start"
                           Margin="0,5,0,0"
                           Grid.Row="1" Grid.Column="1"/>

                    <!-- メール -->
                    <Label Text="メール"
                           FontAttributes="Bold"
                           FontSize="22"
                           HorizontalTextAlignment="Center"
                           Grid.Row="2" Grid.Column="0"/>

                    <Label x:Name="emailLabel"
                           FontSize="22"
                           HorizontalTextAlignment="Start"
                           Margin="0,5,0,0"
                           Grid.Row="2" Grid.Column="1"/>

                    <!-- 電話番号 -->
                    <Label Text="電話番号"
                           FontAttributes="Bold"
                           FontSize="22"
                           HorizontalTextAlignment="Center"
                           Grid.Row="3" Grid.Column="0"/>

                    <Label x:Name="phoneLabel"
                           FontSize="22"
                           HorizontalTextAlignment="Start"
                           Margin="0,5,0,0"
                           Grid.Row="3" Grid.Column="1"/>

                    <!-- 住所 -->
                    <Label Text="住所"
                           FontAttributes="Bold"
                           FontSize="22"
                           HorizontalTextAlignment="Center"
                           Grid.Row="4" Grid.Column="0"/>

                    <Label x:Name="addressLabel"
                           FontSize="22"
                           HorizontalTextAlignment="Start"
                           Margin="0,5,0,10"
                           Grid.Row="4" Grid.Column="1"/>

                </Grid>

                <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                    <Button Text="戻る"
                        BackgroundColor="#CCCCCC"
                        TextColor="Black"
                        CornerRadius="8"
                        HeightRequest="50"
                        WidthRequest="150"
                        HorizontalOptions="Center"
                        Clicked="OnBackClicked"/>

                    <Button Text="登録"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        WidthRequest="150"
                        HorizontalOptions="Center"
                        Clicked="OnSubmitClicked"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- 下部バー -->
        <Grid Grid.Row="2" HeightRequest="80" BackgroundColor="#F5F5F5"/>
    </Grid>
</ContentPage>