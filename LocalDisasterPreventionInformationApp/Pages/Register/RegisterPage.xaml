<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalDisasterPreventionInformationApp.Pages.Register.RegisterPage"
             Title="会員登録">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- 上部バー -->
        <Grid Grid.Row="0" HeightRequest="200" BackgroundColor="#F5F5F5">
            <Label Text="地域防災情報アプリへようこそ！&#10;会員情報のご登録をお願いします。"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </Grid>

        <!-- 中央フォーム -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">

                <Entry x:Name="nameEntry"
                       Placeholder="氏名"
                       ClearButtonVisibility="WhileEditing" 
                       WidthRequest="300"/>

                <Entry x:Name="furiganaEntry"
                       Placeholder="フリガナ"
                       ClearButtonVisibility="WhileEditing" 
                       WidthRequest="300"/>

                <Entry x:Name="emailEntry"
                       Placeholder="メールアドレス"
                       Keyboard="Email"
                       ClearButtonVisibility="WhileEditing" 
                       WidthRequest="300"/>

                <Entry x:Name="phoneEntry"
                       Placeholder="電話番号(ハイフンなし）"
                       Keyboard="Telephone"
                       ClearButtonVisibility="WhileEditing" 
                       WidthRequest="300"/>

                <Entry x:Name="addressEntry"
                       Placeholder="住所"
                       ClearButtonVisibility="WhileEditing" 
                       WidthRequest="300"/>

                <Button Text="次へ"
                        Clicked="OnNextClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        Margin="0,20,0,20" 
                        WidthRequest="100"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- 下部バー -->
        <Grid Grid.Row="2" HeightRequest="80" BackgroundColor="#F5F5F5">
        </Grid>

    </Grid>
</ContentPage>