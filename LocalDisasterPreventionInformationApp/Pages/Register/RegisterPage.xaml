<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalDisasterPreventionInformationApp.Pages.Register.RegisterPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- 上部バー -->
        <Grid Grid.Row="0" HeightRequest="200" BackgroundColor="#F5F5F5">
            <Label Text="地域防災情報アプリへようこそ！&#10;会員情報のご登録をお願いします。"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </Grid>

        <!-- 中央フォーム -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center">

                <!-- 氏名（必須） -->
                <VerticalStackLayout WidthRequest="300">
                    <Label Text="氏名" FontSize="16"/>
                    <Entry x:Name="nameEntry"/>
                    <Label x:Name="nameError" TextColor="Red" FontSize="12" IsVisible="False"/>
                </VerticalStackLayout>

                <!-- フリガナ（必須） -->
                <VerticalStackLayout WidthRequest="300">
                    <Label Text="フリガナ" FontSize="16"/>
                    <Entry x:Name="furiganaEntry"/>
                    <Label x:Name="furiganaError" TextColor="Red" FontSize="12" IsVisible="False"/>
                </VerticalStackLayout>

                <!-- メールアドレス（任意） -->
                <VerticalStackLayout WidthRequest="300">
                    <HorizontalStackLayout>
                        <Label Text="メールアドレス" FontSize="16"/>
                        <Label Text="任意" FontSize="12" TextColor="#888" Margin="8,4,0,0"/>
                    </HorizontalStackLayout>
                    <Entry x:Name="emailEntry" Keyboard="Email"/>
                </VerticalStackLayout>

                <!-- 電話番号（任意） -->
                <VerticalStackLayout WidthRequest="300">
                    <HorizontalStackLayout>
                        <Label Text="電話番号（ハイフンなし）" FontSize="16"/>
                        <Label Text="任意" FontSize="12" TextColor="#888" Margin="8,4,0,0"/>
                    </HorizontalStackLayout>
                    <Entry x:Name="phoneEntry" Keyboard="Telephone"/>
                </VerticalStackLayout>

                <!-- 郵便番号（必須） -->
                <VerticalStackLayout WidthRequest="300">
                    <Label Text="郵便番号（7桁）" FontSize="16"/>
                    <Entry x:Name="zipEntry" Keyboard="Numeric" TextChanged="onZipChanged"/>
                    <Label x:Name="zipError" TextColor="Red" FontSize="12" IsVisible="False"/>
                </VerticalStackLayout>

                <!-- 都道府県（自動入力・タップ不可） -->
                <VerticalStackLayout WidthRequest="300">
                    <HorizontalStackLayout>
                        <Label Text="都道府県" FontSize="16"/>
                        <Label Text="自動入力" FontSize="12" TextColor="#888" Margin="8,4,0,0"/>
                    </HorizontalStackLayout>
                    <Entry x:Name="prefEntry"
                           IsEnabled="False"
                           BackgroundColor="White"
                           TextColor="Black"
                           Placeholder="郵便番号から自動入力"/>
                </VerticalStackLayout>

                <!-- 市区町村（自動入力・タップ不可） -->
                <VerticalStackLayout WidthRequest="300">
                    <HorizontalStackLayout>
                        <Label Text="市区町村" FontSize="16"/>
                        <Label Text="自動入力" FontSize="12" TextColor="#888" Margin="8,4,0,0"/>
                    </HorizontalStackLayout>
                    <Entry x:Name="cityEntry"
                           IsEnabled="False"
                           BackgroundColor="White"
                           TextColor="Black"
                           Placeholder="郵便番号から自動入力"/>
                </VerticalStackLayout>

                <!-- 町域（必須） -->
                <VerticalStackLayout WidthRequest="300">
                    <Label Text="町域" FontSize="16"/>
                    <Entry x:Name="townEntry"/>
                    <Label x:Name="townError" TextColor="Red" FontSize="12" IsVisible="False"/>
                </VerticalStackLayout>

                <!-- 番地（必須） -->
                <VerticalStackLayout WidthRequest="300">
                    <Label Text="番地" FontSize="16"/>
                    <Entry x:Name="addressLineEntry"/>
                    <Label x:Name="addressError" TextColor="Red" FontSize="12" IsVisible="False"/>
                </VerticalStackLayout>

                <!-- 建物名（任意） -->
                <VerticalStackLayout WidthRequest="300">
                    <HorizontalStackLayout>
                        <Label Text="建物名・部屋番号" FontSize="16"/>
                        <Label Text="任意" FontSize="12" TextColor="#888" Margin="8,4,0,0"/>
                    </HorizontalStackLayout>
                    <Entry x:Name="buildingEntry"/>
                </VerticalStackLayout>

                <!-- 次へボタン -->
                <Button Text="次へ"
                        Clicked="OnNextClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        Margin="0,20,0,20"
                        WidthRequest="100"
                        HorizontalOptions="Center"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- 下部バー -->
        <Grid Grid.Row="2" HeightRequest="80" BackgroundColor="#F5F5F5"/>
    </Grid>
</ContentPage>