<ContentPage
    x:Class="LocalDisasterPreventionInformationApp.Pages.Hazard.HazardMapPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:LocalDisasterPreventionInformationApp.Pages.Base"
    Shell.NavBarIsVisible="False">

    <base:BasePage>
        <base:BasePage.InnerContent>

            <!-- ★ WebView とパネルを重ねるための Grid -->
            <Grid>

                <!-- 地図（WebView） -->
                <WebView
                    x:Name="HazardWebView"
                    Source="hazardmap.html"
                    Navigated="HazardWebView_Navigated" />

                <!-- ★ 地図の上に重ねるパネル -->
                <Border
                    Background="#AAFFFFFF"
                    StrokeThickness="0"
                    HorizontalOptions="End"
                    VerticalOptions="Start"
                    Margin="10"
                    Padding="20"
                    WidthRequest="260"
                    HeightRequest="200">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="10">

                        <!-- 災害種別ピッカー -->
                        <Picker
                            x:Name="HazardPicker"
                            Title="災害種別"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedIndexChanged="OnSelectionChanged" />

                        <!-- 住所ピッカー -->
                        <Picker
                            x:Name="AddressPicker"
                            Title="住所"
                            ItemDisplayBinding="{Binding DisplayName}"
                            SelectedIndexChanged="OnSelectionChanged" />

                    </VerticalStackLayout>
                </Border>

            </Grid>

        </base:BasePage.InnerContent>
    </base:BasePage>
</ContentPage>