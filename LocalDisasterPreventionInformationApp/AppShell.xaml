<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LocalDisasterPreventionInformationApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:top="clr-namespace:LocalDisasterPreventionInformationApp.Pages.Top"
    xmlns:setting="clr-namespace:LocalDisasterPreventionInformationApp.Pages.Setting"
    xmlns:startup="clr-namespace:LocalDisasterPreventionInformationApp.Pages.Startup"
    xmlns:stock="clr-namespace:LocalDisasterPreventionInformationApp.Pages.Stock"
    xmlns:hazard="clr-namespace:LocalDisasterPreventionInformationApp.Pages.Hazard"
    xmlns:disaster="clr-namespace:LocalDisasterPreventionInformationApp.Pages.Disaster"
    xmlns:register="clr-namespace:LocalDisasterPreventionInformationApp.Pages.Register">

    <ShellContent Route="StartupPage"
                  FlyoutItemIsVisible="False"
                  ContentTemplate="{DataTemplate startup:StartupPage}"/>

    <!-- ハンバーガーメニュー用 -->
    <!-- トップページ -->
    <FlyoutItem Title="トップページ">
        <ShellContent Route="TopPage"
                      ContentTemplate="{DataTemplate top:TopPage}" />
    </FlyoutItem>

    <!-- 災害速報 -->
    <FlyoutItem Title="災害速報">
        <ShellContent Route="DisasterPage"
                       ContentTemplate="{DataTemplate disaster:DisasterPage}" />
    </FlyoutItem>

    <!-- ハザードマップ -->
    <FlyoutItem Title="ハザードマップ">
        <ShellContent Route="HazardMapPage"
                  ContentTemplate="{DataTemplate hazard:HazardMapPage}" />
    </FlyoutItem>

    <!-- 備蓄管理 -->
    <FlyoutItem Title="備蓄管理">
        <ShellContent Route="StockPage"
                       ContentTemplate="{DataTemplate stock:StockPage}" />
    </FlyoutItem>

    <!--普通のページ用-->
    <!-- 会員登録ページ -->
    <ShellContent Route="RegisterPage"
                  FlyoutItemIsVisible="False"
                  ContentTemplate="{DataTemplate register:RegisterPage}" />

    <!-- 会員登録確認ページ -->
    <ShellContent Route="ConfirmPage"
                  FlyoutItemIsVisible="False"
                  ContentTemplate="{DataTemplate register:ConfirmPage}" />

    <!-- フォント選択ページ -->
    <ShellContent Route="FontPage"
                  FlyoutItemIsVisible="False"
                  ContentTemplate="{DataTemplate setting:FontPage}" />
</Shell>